<script>
  // small helpers
  const $ = sel => document.querySelector(sel);
  const $$ = sel => document.querySelectorAll(sel);

  // nav style on scroll
  const nav = document.getElementById('nav');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 48) nav.classList.add('solid'); else nav.classList.remove('solid');
  });

  // scroll helper
  function scrollToSection(sel){
    const el = document.querySelector(sel);
    if(el) el.scrollIntoView({behavior:'smooth', block:'start'});
  }
  document.querySelectorAll('.nav-links a').forEach(a=>{
    a.addEventListener('click', e=>{
      e.preventDefault();
      const href = a.getAttribute('href');
      if(href && href.startsWith('#')) scrollToSection(href);
    });
  });

  // modal behavior
  const modal = $('#modal');
  const openBtns = ['#openSignup','#ctaSignup','#ctaBottom'];
  openBtns.forEach(id => {
    const btn = $(id);
    if(btn) btn.addEventListener('click', e => {
      e.preventDefault();
      showSignup();
    });
  });
  $('#closeModal').addEventListener('click', ()=> modal.style.display='none');
  window.addEventListener('click', e=> { if(e.target === modal) modal.style.display='none'});

  // toggle signup/login UI
  function showSignup(){
    $('#signupForm').style.display='block';
    $('#loginForm').style.display='none';
    $('#modalTitle').innerText='Create an account';
    $('#modalHint').innerText='Sign up as trader or investor — takes 1 minute.';
    modal.style.display='flex';
  }
  function showLogin(){
    $('#signupForm').style.display='none';
    $('#loginForm').style.display='block';
    $('#modalTitle').innerText='Log in';
    $('#modalHint').innerText='Welcome back — access your dashboard.';
    modal.style.display='flex';
  }
  $('#switchToLogin').addEventListener('click', showLogin);
  $('#switchToSignup').addEventListener('click', showSignup);

  // basic client-side validation + dummy submit handler
  $('#signupForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    $('#formMsg').innerText = '';
    const fullname = $('#fullname').value.trim();
    const email = $('#email').value.trim();
    const role = $('#role').value;
    const password = $('#password').value;
    const password2 = $('#password2').value;

    if(!fullname || !email || !role || !password) {
      $('#formMsg').innerText = 'Please complete all required fields.';
      return;
    }
    if(password !== password2) { $('#formMsg').innerText = 'Passwords do not match.'; return; }
    if(password.length < 6) { $('#formMsg').innerText = 'Password must be at least 6 characters.'; return; }

    // show a friendly loading message
    $('#formMsg').innerText = 'Creating account...';

    // TODO: Replace this with your real signup call (Firebase / API)
    // Simulated delay + success
    await new Promise(r => setTimeout(r, 900));
    $('#formMsg').innerText = 'Account created! Please check your email to verify (if enabled).';
    $('#formMsg').style.color = '#a8f0c6';
    // Auto-close after short delay:
    setTimeout(()=>{ modal.style.display='none'; $('#formMsg').style.color=''; $('#signupForm').reset(); }, 1400);
  });

  // dummy login
  $('#loginForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    $('#loginMsg').innerText = 'Signing in...';
    await new Promise(r => setTimeout(r,700));
    $('#loginMsg').innerText = 'Logged in (demo). Redirecting...';
    setTimeout(()=>{ modal.style.display='none'; $('#loginForm').reset(); $('#loginMsg').innerText=''; }, 900);
  });

  // accessibility: close on Escape
  window.addEventListener('keydown', (e) => {
    if(e.key === 'Escape') modal.style.display = 'none';
  });
</script>
</body>
